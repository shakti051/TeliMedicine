<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/toolbar"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="10dp">

           <!-- <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:padding="4dp"
                android:layout_weight="0.5"
                android:background="@color/colorLightGrey"/>-->

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Payment Via"
                android:layout_weight="0.6"
                android:textSize="22dp"
                android:gravity="center"/>

            <!--<View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:padding="4dp"
                android:layout_weight="0.5"
                android:background="@color/colorLightGrey"/>-->

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/payTmButton"
                android:layout_width="262dp"
                android:layout_height="55dp"
                android:text="Paytm"
                android:background="@drawable/paytm_button_img"
                android:layout_gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="18dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/creditCardButton"
                android:layout_width="262dp"
                android:layout_height="55dp"
                android:text="credit card"
                android:background="@drawable/creditcard_button_img"
                android:layout_gravity="center"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="18dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/debitCardButton"
                android:layout_width="262dp"
                android:layout_height="55dp"
                android:text="debit card"
                android:background="@drawable/debitcard_button_img"
                android:layout_gravity="center"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="18dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/natbankingButton"
                android:layout_width="262dp"
                android:layout_height="55dp"
                android:text="net banking"
                android:background="@drawable/netbanking_button_img"
                android:layout_gravity="center"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="18dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/aitelMoneyButton"
                android:layout_width="262dp"
                android:layout_height="55dp"
                android:text="airtel money"
                android:background="@drawable/airtelmoney_button_img"
                android:layout_gravity="center"/>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>