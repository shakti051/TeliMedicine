<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="4dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/patientNameLabelTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:layout_weight="1"
                android:textSize="14dp"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

            <TextView
                android:id="@+id/patientNameTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aman Verma"
                android:layout_weight="1"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="4dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ageLabelTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Age"
                android:layout_weight="1"
                android:textSize="14dp"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

            <TextView
                android:id="@+id/ageTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="22"
                android:layout_weight="1"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="4dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dateLabelTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date Time"
                android:layout_weight="1"
                android:textSize="14dp"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

            <TextView
                android:id="@+id/dateTimeTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="15-07-16/02:30 pm"
                android:layout_weight="1"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="4dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cityLabelTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="City"
                android:layout_weight="1"
                android:textSize="14dp"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

            <TextView
                android:id="@+id/cityTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delhi"
                android:layout_weight="1"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

        </LinearLayout>

        <Button
            android:id="@+id/signUpPreceedBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textSize="14dp"
            android:gravity="center"
            android:text="Cinfirm"
            android:textColor="@color/colorWhite"
            android:background="@color/colorPrimary"/>

    </LinearLayout>

</LinearLayout>