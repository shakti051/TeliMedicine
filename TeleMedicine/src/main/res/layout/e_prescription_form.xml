<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Doctor Details"
                android:textSize="17dp"
                android:paddingLeft="4dp"
                android:gravity="left|center"
                android:textColor="@color/colorWhite"
                android:background="@color/colorDarkGrey"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/clinicDoctorNameTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dr. Ak Singh"
                android:textSize="14dp"
                android:padding="4dp"/>

            <TextView
                android:id="@+id/clinicNameTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lk Skin Center "
                android:textSize="14dp"
                android:padding="4dp"
                />

            <TextView
                android:id="@+id/confirmSpecialityTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delhi"
                android:textSize="14dp"
                android:padding="4dp" />

            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Patient Details"
                android:textSize="17dp"
                android:paddingLeft="4dp"
                android:gravity="left|center"
                android:textColor="@color/colorWhite"
                android:background="@color/colorDarkGrey"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/patientNameTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Aman Verma"
                    android:textSize="14dp"
                    android:padding="4dp"
                   />

                <TextView
                    android:id="@+id/patientAgeTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="28"
                    android:textSize="14dp"
                    android:padding="4dp"
                    />

                <TextView
                    android:id="@+id/patientGenderTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:textSize="14dp"
                    android:padding="4dp" />

            </LinearLayout>

           <!--Diet Label-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Diet and Exercise"
                android:textSize="17dp"
                android:paddingLeft="4dp"
                android:gravity="left|center"
                android:textColor="@color/colorWhite"
                android:background="@color/colorDarkGrey"/>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="10dp"
                card_view:cardUseCompatPadding="true">

                 <EditText
                     android:layout_width="match_parent"
                     android:layout_height="100dp"
                     android:gravity="top"/>

          </android.support.v7.widget.CardView>


            <!--Prescription Label-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Prescription"
                android:textSize="17dp"
                android:paddingLeft="4dp"
                android:gravity="left|center"
                android:textColor="@color/colorWhite"
                android:background="@color/colorDarkGrey"/>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view_prescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="10dp"
                card_view:cardUseCompatPadding="true">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:gravity="top"/>

            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorLightGrey"
                android:layout_margin="2dp"
                android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Old Report"
                android:textSize="17dp"
                android:padding="4dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:textColor="@color/colorWhite"
                android:background="@color/colorPrimary"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Report"
                    android:textSize="17dp"
                    android:gravity="center"
                    android:padding="4dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:textColor="@color/colorWhite"
                    android:background="@color/colorPrimary"/>

                </LinearLayout>

            <Button
                android:id="@+id/submitProceedBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:layout_marginTop="20dp"
                android:textColor="@color/colorWhite"
                android:background="@color/colorPrimaryDark"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>