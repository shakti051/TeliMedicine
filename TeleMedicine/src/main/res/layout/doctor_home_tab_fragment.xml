<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/colorWhite"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Services "
        android:gravity="left|center"
        android:textSize="16dp"
        android:paddingLeft="10dp"
        android:textStyle="bold"
        android:background="@color/colorLightGrey"/>

    <LinearLayout
        android:id="@+id/findDoctorsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="6dp"
        android:gravity="center"
        android:background="@drawable/tab_background_selector"
        android:layout_margin="8dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/hospital_icon"/>

        <TextView
            android:id="@+id/findDoctorTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hospitals"
            android:padding="2dp"
            android:layout_weight="1"
            android:textSize="14dp"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="4dp"
            android:layout_marginRight="4dp"
            android:src="@drawable/arrow_icon_grey"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="10dp"
        android:background="#BDBDBD"/>

    <!--PHARMACY LABEL-->
    <LinearLayout
        android:id="@+id/pharmacyLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="6dp"
        android:gravity="center"
        android:background="@drawable/tab_background_selector"
        android:layout_margin="8dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/pharmacy_icon"/>

        <TextView
            android:id="@+id/pharmacyTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pharmacy"
            android:padding="2dp"
            android:layout_weight="1"
            android:textSize="14dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="4dp"
            android:layout_marginRight="4dp"
            android:src="@drawable/arrow_icon_grey"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="10dp"
        android:background="#BDBDBD"/>

    <!--PHARMACY LABEL-->
    <LinearLayout
        android:id="@+id/ambulanceLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="6dp"
        android:gravity="center"
        android:background="@drawable/tab_background_selector"
        android:layout_margin="8dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ambulance_icon"/>

        <TextView
            android:id="@+id/ambulanceTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ambulance"
            android:padding="2dp"
            android:layout_weight="1"
            android:textSize="14dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="4dp"
            android:layout_marginRight="4dp"
            android:src="@drawable/arrow_icon_grey"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="10dp"
        android:background="#BDBDBD"/>

    <!--Upcoming Appointment -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Upcoming Appointment "
        android:gravity="left|center"
        android:textSize="16dp"
        android:layout_marginTop="6dp"
        android:paddingLeft="10dp"
        android:textStyle="bold"
        android:background="@color/colorLightGrey"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/appointmentsRV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:layout_weight="1"
        android:scrollbars="vertical" />

</LinearLayout>