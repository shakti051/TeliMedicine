<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorAccent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="Details"
                android:textSize="19dp"
                android:gravity="left|center"
                android:padding="4dp"
                android:background="@color/colorLightGrey"/>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                card_view:cardCornerRadius="10dp"
                card_view:cardElevation="5dp"
                card_view:cardUseCompatPadding="true">

             <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="4dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Patient Name"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:textStyle="bold"
                    android:textSize="17dp"/>

                <TextView
                    android:id="@+id/patientNameTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Vishal"
                    android:layout_weight="1"
                    android:padding="2dp"
                    android:gravity="left"
                    android:textStyle="bold"
                    android:textSize="14dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="4dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Gender"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:textStyle="bold"
                    android:textSize="17dp"/>

                <TextView
                    android:id="@+id/patientGenderTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:layout_weight="1"
                    android:padding="2dp"
                    android:gravity="left"
                    android:textStyle="bold"
                    android:textSize="14dp"/>

            </LinearLayout>

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:gravity="center"
                  android:padding="4dp">

                  <TextView
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:text="Disease"
                      android:layout_weight="1"
                      android:gravity="left"
                      android:textStyle="bold"
                      android:textSize="17dp"/>

                  <TextView
                      android:id="@+id/patientDiseaseTv"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:text="Heart Disease"
                      android:layout_weight="1"
                      android:padding="2dp"
                      android:gravity="left"
                      android:textStyle="bold"
                      android:textSize="14dp"/>

              </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="4dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Age"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:textStyle="bold"
                    android:textSize="17dp"/>

                <TextView
                    android:id="@+id/patientAgeTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="25"
                    android:layout_weight="1"
                    android:padding="2dp"
                    android:gravity="left"
                    android:textStyle="bold"
                    android:textSize="14dp"/>

            </LinearLayout>

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:gravity="center"
                  android:padding="4dp">

                  <TextView
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:text="Mobile Number"
                      android:layout_weight="1"
                      android:gravity="left"
                      android:textStyle="bold"
                      android:textSize="17dp"/>

                  <TextView
                      android:id="@+id/patientMobNumberTv"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:text="8286434550"
                      android:layout_weight="1"
                      android:padding="2dp"
                      android:gravity="left"
                      android:textStyle="bold"
                      android:textSize="14dp"/>

              </LinearLayout>

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:gravity="center"
                  android:padding="4dp">

                  <TextView
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:text="Address"
                      android:layout_weight="1"
                      android:gravity="left"
                      android:textStyle="bold"
                      android:textSize="17dp"/>

                  <TextView
                      android:id="@+id/patientAddressTv"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:text="New Delhi"
                      android:layout_weight="1"
                      android:padding="2dp"
                      android:gravity="left"
                      android:textStyle="bold"
                      android:textSize="14dp"/>

              </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorDarkGrey"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="4dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Date Time"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:textStyle="bold"
                    android:textSize="17dp"/>

                <TextView
                    android:id="@+id/appointmentDateTimeTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="10-06-2016/ 04:02 PM"
                    android:layout_weight="1"
                    android:padding="2dp"
                    android:gravity="left"
                    android:textStyle="bold"
                    android:textSize="14dp"/>

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorDarkGrey"
                android:layout_marginTop="10dp"/>

            <Button
                android:id="@+id/ePrescriptionBtn"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:text="Prescription"
                android:layout_marginTop="50dp"
                android:layout_gravity="center"
                android:textColor="@color/colorWhite"
                android:layout_marginBottom="10dp"
                android:background="@color/colorPrimaryDark"/>

         </LinearLayout>
      </android.support.v7.widget.CardView>
      </LinearLayout>
    </ScrollView>
</LinearLayout>