<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/toolbar"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/advertisIv"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:padding="2dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorPrimary"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Details"
                android:gravity="left|center"
                android:background="@color/colorLightGrey"
                android:paddingLeft="4dp"
                android:textSize="17dp"/>

             <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:orientation="horizontal"
                     android:gravity="left|center"
                     android:layout_marginTop="5dp"
                     android:layout_marginLeft="8dp"
                     android:layout_marginRight="8dp"
                     android:padding="4dp"
                     android:background="@color/colorLightGrey"
                     >

                     <ImageView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:padding="4dp"
                         android:layout_gravity="center_vertical"
                         android:src="@drawable/pharmacy_icon"/>


                         <TextView
                             android:id="@+id/pharmacyNameTv"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:text="Apollo Pharmacy"
                             android:padding="2dp"
                             android:layout_marginLeft="4dp"
                             android:textSize="14dp"/>

                     </LinearLayout>

                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:orientation="horizontal"
                     android:gravity="left|center"
                     android:layout_marginTop="5dp"
                     android:layout_marginLeft="8dp"
                     android:layout_marginRight="8dp"
                     android:padding="4dp"
                     android:background="@color/colorLightGrey"
                     >

                     <ImageView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:padding="4dp"
                         android:layout_gravity="center_vertical"
                         android:src="@drawable/address_icon"/>


                     <TextView
                         android:id="@+id/addressTv"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="Address"
                         android:padding="2dp"
                         android:layout_marginLeft="4dp"
                         android:textSize="14dp"/>

                 </LinearLayout>

                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:orientation="horizontal"
                     android:layout_marginTop="5dp"
                     android:layout_marginLeft="8dp"
                     android:layout_marginRight="8dp"
                     android:padding="4dp"
                     android:background="@color/colorLightGrey"
                     >

                     <ImageView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:padding="4dp"
                         android:layout_gravity="center_vertical"
                         android:src="@drawable/phone_cal_icon"/>


                     <TextView
                         android:id="@+id/mobileTv"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="9724657608"
                         android:padding="2dp"
                         android:layout_weight="1"
                         android:layout_gravity="center_vertical"
                         android:layout_marginLeft="4dp"
                         android:textSize="14dp"/>

                     <ImageView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_gravity="center_vertical"
                         android:padding="4dp"
                         android:src="@drawable/arrow_icon_grey"/>

                 </LinearLayout>


                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="30dp"
                     android:text="Map View"
                     android:gravity="left|center"
                     android:background="@color/colorLightGrey"
                     android:paddingLeft="4dp"
                     android:layout_marginTop="10dp"
                     android:textSize="17dp"
                     android:drawablePadding="4dp"
                     android:drawableLeft="@drawable/location_icon"/>

                 <fragment
                     android:id="@+id/map"
                     android:layout_width="match_parent"
                     android:layout_height="135dp"
                     android:layout_marginTop="5dp"
                     android:name="com.google.android.gms.maps.SupportMapFragment"
                    />

             </LinearLayout>
 </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="1dp">

        <TextView
            android:id="@+id/uploadPrescriptionTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload Prescription"
            android:textSize="16dp"
            android:gravity="center"
            android:padding="10dp"
            android:layout_marginRight="4dp"
            android:drawablePadding="6dp"
            android:textColor="@color/colorWhite"
            android:drawableLeft="@drawable/upload_icon"
            />


        <View
            android:layout_width="2dp"
            android:layout_height="15dp"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:background="@color/colorWhite"/>


        <TextView
            android:id="@+id/e_PrescriptionTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="e_Prescription"
            android:textSize="16dp"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="@color/colorWhite"
           android:drawablePadding="8dp"
            android:drawableLeft="@drawable/upload_icon"
            />


</LinearLayout>
</LinearLayout>